-provide :title, "Sign Up"
%h1
	Sign up
-ab_test("signup", "plan_1", "plan_2") do |plan|
	-case plan
	-when "plan_1"
		%h2
			This is the testing paragraph for plan 1. AAAAAAAAA
	-when "plan_2"
		%h2
			This is the testing paragraph for plan 2. BBBBBBBBB
.row
	.span6.offset3
		=form_for(@user) do |f|
			=render 'shared/error_messages', :object => f.object

			=f.label :name
			=f.text_field :name

			=f.label :email
			=f.text_field :email

			=f.label :password
			=f.password_field :password

			=f.label :password_confirmation, 'Confirm Password'
			=f.password_field :password_confirmation

			=f.submit "Create my account", :class => "btn btn-large btn-primary"